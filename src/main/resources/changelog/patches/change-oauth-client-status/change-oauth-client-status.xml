<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="013" author="vadim.lebediantsev">
        <addColumn tableName="oauth_client_details">
            <column name="blocked" type="boolean">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="014" author="vadim.lebediantsev">
        <insert tableName="oauth_client_details">
            <column name="client_id" value="super-admin"/>
            <column name="client_secret" value="$2a$12$jUfjJ7WdvNvjafnMaVm0.uKHsvJq.Js22GhBv9p7NxPIFbROzVT2."/>
            <column name="scope" value="any"/>
            <column name="authorized_grant_types" value="client_credentials"/>
            <column name="authorities" value="OAUTH_ADMIN"/>
            <column name="access_token_validity" value="100"/>
            <column name="refresh_token_validity" value="300"/>
            <column name="anon_registration_enabled" value="false"/>
            <column name="blocked" value="false"/>
        </insert>
    </changeSet>

    <changeSet id="015" author="vadim.lebediantsev">
        <createTable tableName="oauth_client_history">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="oauth_client" type="varchar(255)">
                <constraints foreignKeyName="oauth_client_fk" references="oauth_client_details(client_id)"/>
            </column>
            <column name="oauth_admin" type="varchar(255)">
                <constraints foreignKeyName="oauth_admin_fk" references="oauth_client_details(client_id)"/>
            </column>
            <column name="oauth_event" type="varchar(25)"/>
            <column name="event_date" type="timestamp"/>
        </createTable>
    </changeSet>
</databaseChangeLog>