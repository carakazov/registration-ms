<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="010" author="vadim.lebediantsev">
        <addColumn tableName="roles">
            <column name="blocked" type="boolean">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="011" author="vadim.lebediantsev">
        <insert tableName="system_scopes">
            <column name="system_scope" value="CHANGE_ROLE_STATUS"/>
        </insert>
    </changeSet>
</databaseChangeLog>